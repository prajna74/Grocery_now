<section class="track">
    <div class="status-box w-1/2 container mx-auto mt-8">
        <div class="flex items-center justify-between">
           <h1 class="font-bold text-2xl">Track order</h1>
           <span class="rounded-full  text-green-900 text-sm px-6 py-2"><%=order.id%></span>
       </div>
       <div class="mt-8">
           <input type="hidden" name="status" id="orderStatus" value="<%=JSON.stringify(order)%>">
           <ul>
             <li class="status-line text-xl pb-16"  data-status="order_placed"><span>Order Placed</span></li>
             <li class="status-line text-xl pb-16" data-status="confirmed"><span>Confirmed</span></li>
             <li class="status-line text-xl pb-16" data-status="prepared"><span>Preparation</span></li>
             <li class="status-line text-xl pb-16" data-status="delivered"><span>Out for Delivery</span></li>
             <li class="status-line text-xl" data-status="completed"><span>Complete</span></li>
           </ul>
       </div>
    </div>

</section>