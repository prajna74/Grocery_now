  <h1 class="text-3xl font-bold mt-8 mb-8">Groceries</h1>
  <div class="grid grid-cols-4 row-gap-12 col-gap-12">
   <% for(var i=0;i<groceries.length;i++){%>
    <div class="w-64 mb-12">
      <div>
        <img src="/images/home.png" alt="" class="h-40 ">
      </div>
      <div class="text-center mt-4">
        <h1 class="text-xl font-bold"><%=groceries[i].name%></h1>
        <div class="flex justify-between">
        <h2 class="text-l  font-bold">â‚¹<span id="price<%=i%>"><%=groceries[i].price%></span></h2>
        <div><button  data-price=<%=groceries[i].price%> class="btn inc rounded-full px-1 items-center">+</button><span id="quant<%=i%>" class=" text-xl font-bold p-2"><%=groceries[i].quantity%></span><button data-price=<%=groceries[i].price%> class="btn dec items-center rounded-full px-1">-</button></div>
       </div>
       <button data-grocery=<%=JSON.stringify(groceries[i])%>  class="mx-auto add-to-cart flex items-center justify-between px-4 py-2 rounded-full">
         <span>+</span>
         <span>Add</span>
       </button>
      </div>
    </div>
 <%}%>
 </div>
</div>
